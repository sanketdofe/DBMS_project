<%- include('partials/header') %>

<div class="">
  <h4 style="margin: 30px 0 0 170px">Patient Name: <%= pat_name %></h4>
</div>
<div class="">
  <h6 style="margin: 30px 0 0 170px">Appt. No: <%= appt_no %></h6>
</div>

<div class="container d-flex justify-content-center" style="margin: 30px 0">
  <div class="col-sm-9">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Sr.No</th>
          <th scope="col">Medication</th>
          <th scope="col">Quantity</th>
          <th scope="col">Directions</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% pres.forEach((item, i) => { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= item.med %></td>
            <td><%= item.qty %></td>
            <td><%= item.dir %></td>
            <td><%= item.food + " food"%></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

</div>

<div class="container mt-5 d-flex justify-content-center">
  <div class="col-sm-8">

  <form class="" action="/add-med" method="post">
    <div class="form-row">
      <div class="col">
        <input type="text" class="form-control" placeholder="Medication" name="med">
      </div>
      <div class="col">
        <input type="text" class="form-control" placeholder="Quantity" name="qty">
      </div>
      <div class="col">
        <input type="text" class="form-control" placeholder="Directions" name="dir">
      </div>
      <div class="col">
        <select name="food" class="form-control">
          <option value="Not dependent on">Not Dependent</option>
          <option value="Before">Before Food</option>
          <option value="After">After Food</option>
        </select>
      </div>
      <div class="col">
        <input type="hidden" name="id" value="<%= id %>">
        <input type="hidden" name="pat_name" value="<%= pat_name %>">
        <input type="hidden" name="appt_no" value="<%= appt_no %>">
        <button class="btn btn-light" type="submit">Add</button>
      </div>
    </div>
  </form>
  </div>
</div>

<div class="row d-flex justify-content-center" >
  <form class="column" action="/<%= id %>/<%= appt_no %>/add-prescription" method="post">
    <input type="hidden" name="pat_name" value="<%= pat_name %>">
    <button style="margin: 30px 0 0; display: inline-block" type="submit" class="btn btn-dark">Submit</button>
  </form>
  <form class="column" action="/check-appointment" method="post">
    <input type="hidden" name="id" value="<%= id %>">
    <button class="btn btn-outline-dark" style="margin: 30px 10px 0" >Go Back</button>
  </form>
</div>





<%- include('partials/footer') %>

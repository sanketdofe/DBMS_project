<%- include('partials/header') %>


<div class="container d-flex justify-content-center" >
  <div class="" style="margin: 30px 0">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Appt No</th>
          <th scope="col">Doctor</th>
          <th scope="col">Date</th>
          <th scope="col">Prescription</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < rec.length; i++) { %>
          <tr>
            <th scope="row"><%= rec[i].appt_no %></th>
            <td><%= doc[i].name %></td>
            <td><%= rec[i].date_admitted %></td>
            <form class="" action="/check-prescription" method="post">
              <td><button class="btn btn-light" type="submit" name="record_no" value="<%= rec[i].record_no %>">Check</button></td>
            </form>

          </tr>
        <% } %>


      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center">
  <button class="btn btn-outline-dark" onclick="goBack()">Go Back</button>
</div>

<script>
  function goBack() {
    window.history.go(-1);
  }
</script>



<%- include('partials/footer') %>

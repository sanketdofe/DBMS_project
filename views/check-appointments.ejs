<%- include('partials/header') %>


<div class="container d-flex justify-content-center" >
  <div class="" style="margin: 30px 0">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Appt No</th>
          <th scope="col">Name</th>
          <th scope="col">Gender</th>
          <th scope="col">Age</th>
          <th scope="col">Date Admitted</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < appt.length; i++) { %>
          <tr>
            <th scope="row"><%= appt[i].appt_no %></th>
            <td><%= pat[i].name %></td>
            <td><%= pat[i].gender %></td>
            <td><%= pat[i].age %></td>
            <td><%= appt[i].date_admitted %></td>
            <form class="" action="/<%= id %>/<%= appt[i].appt_no %>/add-prescription" method="get">
              <td><button class="btn btn-light" type="submit">Open</button></td>
            </form>
            <form class="" action="/<%= appt[i].pid %>/check-history" method="get">
              <td><button class="btn btn-light" type="submit">History</button></td>
            </form>

          </tr>
        <% } %>

      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center">
  <button class="btn btn-outline-dark" onclick="goBack()">Go Back</button>
</div>

<script>
  function goBack() {
    window.history.go(-1);
  }
</script>



<%- include('partials/footer') %>

<%- include('partials/header') %>

<div class="container d-flex justify-content-center">
  <div class="col-md-5">
    <div class="form-area">
      <form action="/<%= recp_name %>/add-case" method="post" >
        <br style="clear:both">
        <h3 style="margin-bottom: 25px; text-align: center;">Add Case</h3>


        <div class="form-group">
          <input type="text" class="form-control" id="name" name="pname" placeholder="Name of Patient" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="doc_name" name="doc_name" placeholder="Doctor to be Appointed" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="nurse" name="nurse" placeholder="Nurse to be Appointed" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="room_alloted" name="room_alloted" placeholder="Room to be Alloted" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="ward_alloted" name="ward_alloted" placeholder="Ward to be Alloted" >
        </div>

        <div class="d-flex justify-content-center">
          <div class="" style="margin: 0 5px">
            <button type="submit" class="btn btn-dark">Submit</button>
          </div>
          <div class="" style="margin: 0 5px">
            <button class="btn btn-outline-dark" onclick="goBack()">Go Back</button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>

<script>
  function goBack() {
    window.history.go(-1);
  }
</script>


<%- include('partials/footer') %>

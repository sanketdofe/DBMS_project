<%- include('partials/header') %>

<div class="container d-flex justify-content-center">
  <div class="col-md-5">
    <div class="form-area">
      <form action="/<%= recp_name %>/add-appointment" method="post" >
        <br style="clear:both">
        <h3 style="margin-bottom: 25px; text-align: center;">Add Appointment</h3>


        <div class="form-group">
          <input type="text" class="form-control" id="name" name="pname" placeholder="Name of Patient" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="doc_name" name="doc_name" placeholder="Doctor to be Appointed" required>
        </div>

        <div class="d-flex justify-content-center">
          <div class="" style="margin: 0 5px">
            <button type="submit" class="btn btn-dark">Submit</button>
          </div>
        </div>
      </form>
    </div>
    <div class="d-flex justify-content-center" style="margin: 5px">
      <form class="" action="/<%= recp_name %>/reception-home" method="get">
        <button class="btn btn-outline-dark" type="submit">Go Back</button>
      </form>
    </div>
  </div>
</div>



<%- include('partials/footer') %>
